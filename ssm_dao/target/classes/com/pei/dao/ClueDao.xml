    <select id="selectByCondition" resultType="com.pei.domain.Clue">
        select c.id,c.fullname,c.company,c.phone,c.mphone,c.source,c.owner,c.state,u.name as owner,c.createTime from clue c join user u on c.owner=u.id
        <where>
            <if test="fullname!=null and fullname!=''">
                c.fullname like '%' #{fullname} '%'
            </if>
            <if test="company!=null and company!=''">
                and c.company like '%' #{company} '%'
            </if>
            <if test="phone!=null and phone!=''">
                and c.phone like '%' #{phone} '%'
            </if>
            <if test="mphone!=null and mphone!=''">
                and c.mphone like '%' #{mphone} '%'
            </if>
            <if test="source!=null and source!=''">
                and c.source = #{source}
            </if>
            <if test="owner!=null and owner!=''">
                and c.owner like '%' #{owner} '%'
            </if>
            <if test="state!=null and state!=''">
                and c.state = #{state}
            </if>
        </where>
    </select>
